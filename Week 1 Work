print("Exercise 34: Even or Odd")

num = int(input())
num = num%2
if num == 0:
  print("Even")
else:
  print("Odd")

print("")
print("Exercise 35: Dog Years")

year = int(input("# of human years: "))
if year <= 2:
  year = year * 10.5
  print(f"would equal to {year} years in dog age")
elif year > 2:
  year = ((year - 2) * 4) + 21
  print(f"would equal to {year} years in dog age")
else:
  print("Error")

print("")
print("Exercise 36: Vowel or Consonant")

letter = input("Choose a letter: ")
if letter == "a" or letter == "e" or letter == "i" or letter == "o" or letter == "u":
  print("It is a Vowel")
elif letter == "y":
  print("Sometimes a vowel and sometimes a consonant")
else:
  print("It is a Consonant")

print("")
print("Exercise 37: Name that Shape")

shape = int(input("Number of sides of the shape: "))

if shape == 3:
  print("It is a Triangle")
elif shape == 4:
  print("It is a Square")
elif shape == 5:
  print("It is a Pentagon")
elif shape == 6:
  print("It is a Hexagon")
elif shape == 7:
  print("It is a Heptagon")
elif shape == 8:
  print("It is a Octagon")
elif shape == 9:
  print("It is a Nonagon")
elif shape == 10:
  print("It is a Decagon")
else:
  print("Error, out of range")

print("")
print("Exercise 38: Month Name to Numbers of Days")

month = input("What month is it? ")
if month == "January" or month == "january" or month == "March" or month == "march" or month == "May" or month == "may" or month == "July" or month == "july" or month == "August" or month == "august" or month == "October" or month == "october" or month == "December" or month == "december":
  print(f"There are 31 days for the month of {month}")
elif month == "February" or month == "february":
  print(f"There are 28 or 29 days for the month of {month}")
else:
  print(f"There are 30 days for the month of {month}")

